@model TodoViewModel;

<div class="row justify-content-center">
	<div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
		<table class="table">
			<thead>
				<tr class="table-primary">
					<th scope="col">Id</th>
					<th scope="col">Name</th>
					<th scope="col"></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var t in Model.TodoList)
				{
					<tr>
						<td class="todos-column" scope="row">@t.Id</td>
						<td class="todos-column">@t.Name</td>
						<td class="buttons-column">
							<input type="submit" value="Delete" onclick="deleteTodo(@t.Id, '@t.Name')" />
							<input type="submit" value="Update" onclick="updateTodo(@t.Id, '@t.Name')" />
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>